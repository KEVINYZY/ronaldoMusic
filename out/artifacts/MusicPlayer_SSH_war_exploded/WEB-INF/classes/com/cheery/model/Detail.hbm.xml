<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.cheery.model">
    <!--name：实体类名,table：对应数据库表名-->
    <class name="DetailEntity" table="detail">
        <!-- 配置主键映射 -->
        <!--name：实体类的属性名,type：数据类型,column：数据库表的字段名-->
        <id name="deId" column="deId" type="integer">
            <!-- 设置主键生成方式 -->
            <generator class="native"></generator>
        </id>
        <property name="deName" column="deName" type="java.lang.String"/>
        <property name="time" column="time" type="java.lang.String"/>
        <property name="dePic" column="dePic" type="java.lang.String"/>
        <property name="deType" column="deType" type="java.lang.String"/>
        <property name="otPic" column="otPic" type="java.lang.String"/>
        <property name="label" column="label" type="java.lang.String"/>
        <property name="explain" column="explain" type="java.lang.String"/>

        <!-- 多对一 -->
        <many-to-one name="user" column="userId" class="UserEntity" unique="true"/>
    </class>
</hibernate-mapping>