<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.cheery.model">
    <!--name：实体类名,table：对应数据库表名-->
    <class name="SongEntity" table="song">
        <!-- 配置主键映射 -->
        <!--name：实体类的属性名,type：数据类型,column：数据库表的字段名-->
        <id name="soId" type="integer">
            <column name="soId"></column>
            <!-- 设置主键生成方式 -->
            <generator class="native"></generator>
        </id>
        <!-- 配置其他属性 -->
        <!--name：实体类的属性名,type：数据类型,column：数据库表的字段名-->
        <property name="soName" type="java.lang.String">
            <column name="soName"></column>
        </property>
        <property name="soPic" type="java.lang.String">
            <column name="soPic"></column>
        </property>
        <property name="url" type="java.lang.String">
            <column name="url"></column>
        </property>
        <property name="lyric" type="java.lang.String">
            <column name="lyric"></column>
        </property>
        <property name="language" type="java.lang.String">
            <column name="language"></column>
        </property>
        <property name="company" type="java.lang.String">
            <column name="company"></column>
        </property>
        <property name="soTime" type="integer">
            <column name="soTime"></column>
        </property>
        <!-- 多对一 -->
        <many-to-one name="song" column="siId" class="SongEntity" unique="true"></many-to-one>
    </class>
</hibernate-mapping>