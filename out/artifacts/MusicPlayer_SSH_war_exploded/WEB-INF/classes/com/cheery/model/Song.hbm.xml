<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.cheery.model">
    <!--name：实体类名,table：对应数据库表名-->
    <class name="SongEntity" table="song">
        <!-- 配置主键映射 -->
        <!--name：实体类的属性名,type：数据类型,column：数据库表的字段名-->
        <id name="soId" column="soId" type="integer">
            <!-- 设置主键生成方式 -->
            <generator class="native"></generator>
        </id>
        <!-- 配置其他属性 -->
        <!--name：实体类的属性名,type：数据类型,column：数据库表的字段名-->
        <property name="soName" column="soName" type="java.lang.String"/>
        <property name="soPic" column="soPic" type="java.lang.String"/>
        <property name="url" column="url" type="java.lang.String"/>
        <property name="lyric" column="lyric" type="java.lang.String"/>
        <property name="language" column="language" type="java.lang.String"/>
        <property name="company" column="company" type="java.lang.String"/>
        <property name="soTime" column="soTime" type="java.lang.String"/>
        <!-- 多对一 -->
        <many-to-one name="singer" column="siId" class="SingerEntity" unique="true"></many-to-one>
    </class>
</hibernate-mapping>