<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.cheery.model">
    <!--name：实体类名,table：对应数据库表名-->
    <class name="SingerEntity" table="singer">
        <!-- 配置主键映射 -->
        <!--name：实体类的属性名,type：数据类型,column：数据库表的字段名-->
        <id name="siId" column="siId" type="integer">
            <!-- 设置主键生成方式 -->
            <generator class="native"></generator>
        </id>
        <!-- 配置其他属性 -->
        <!--name：实体类的属性名,type：数据类型,column：数据库表的字段名-->
        <property name="siName" column="siName" type="java.lang.String"/>
        <property name="otName" column="otName" type="java.lang.String"/>
        <property name="siPic" column="siPic" type="java.lang.String"/>
        <property name="siType" column="siType" type="java.lang.String"/>
        <property name="nationality" column="nationality" type="java.lang.String"/>
        <property name="area" column="area" type="java.lang.String"/>
        <property name="region" column="region" type="java.lang.String"/>
        <property name="vocation" column="vocation" type="java.lang.String"/>
        <property name="style" column="style" type="java.lang.String"/>
        <property name="explain" column="explain" type="java.lang.String"/>
        <!-- 一对多 name表示对应的实体类集合,column外键字段， -->
        <bag name="songList" inverse="true" cascade="all" lazy="false">
            <key column="soId"></key>
            <one-to-many class="SongEntity"></one-to-many>
        </bag>
    </class>
</hibernate-mapping>