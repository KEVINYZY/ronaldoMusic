<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.cheery.model">
    <!--name：实体类名,table：对应数据库表名-->
    <class name="UserEntity" table="user">
        <!-- 配置主键映射 -->
        <!--name：实体类的属性名,type：数据类型,column：数据库表的字段名-->
        <id name="userId" type="integer">
            <column name="userId"></column>
            <!-- 设置主键生成方式 -->
            <generator class="native"></generator>
        </id>
        <!-- 配置其他属性 -->
        <!--name：实体类的属性名,type：数据类型,column：数据库表的字段名-->
        <property name="userName" type="java.lang.String">
            <column name="userName"></column>
        </property>
        <property name="userPic" type="java.lang.String">
            <column name="userPic"></column>
        </property>
        <property name="phone" type="java.lang.String">
            <column name="phone"></column>
        </property>
        <property name="password" type="java.lang.String">
            <column name="password"></column>
        </property>
        <property name="info" type="java.lang.String">
            <column name="info"></column>
        </property>
        <property name="gender" type="java.lang.String">
            <column name="gender"></column>
        </property>
        <property name="age" type="integer">
            <column name="age"></column>
        </property>
        <!-- 一对多 name表示对应的实体类集合,column外键字段， -->
        <bag name="commentList" inverse="true" cascade="all">
            <key column="coId"></key>
            <one-to-many class="CommentEntity"></one-to-many>
        </bag>
        <bag name="followList" inverse="true" cascade="all">
            <key column="foId"></key>
            <one-to-many class="FollowEntity"></one-to-many>
        </bag>
        <bag name="playList" inverse="true" cascade="all">
            <key column="userId"></key>
            <one-to-many class="DetailEntity"></one-to-many>
        </bag>
    </class>
</hibernate-mapping>